<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:NotenManager"
             x:Class="NotenManager.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- Define fallback colors directly in case resource loading fails -->
            <Color x:Key="Primary">#667eea</Color>
            <Color x:Key="Secondary">#764ba2</Color>
            <Color x:Key="Tertiary">#38f9d7</Color>
            <Color x:Key="White">White</Color>
            <Color x:Key="Black">Black</Color>
            <Color x:Key="Gray100">#f8f9fa</Color>
            <Color x:Key="Gray200">#e9ecef</Color>
            <Color x:Key="Gray300">#dee2e6</Color>
            <Color x:Key="Gray400">#ced4da</Color>
            <Color x:Key="Gray500">#adb5bd</Color>
            <Color x:Key="Gray600">#6c757d</Color>
            <Color x:Key="Gray900">#212529</Color>
            <Color x:Key="SurfaceLight">#ffffff</Color>
            <Color x:Key="SurfaceDark">#1e1e1e</Color>
            <Color x:Key="OffBlack">#2b2b2b</Color>
        </ResourceDictionary>
    </Application.Resources>
</Application>
